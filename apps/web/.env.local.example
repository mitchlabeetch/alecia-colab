# Local development environment variables
# Copy this file to .env.local and update with your actual values

# Clerk Authentication (Required for auth features)
# Get from: https://dashboard.clerk.com
# For build-only testing, use valid test keys or leave empty to disable auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Convex Database (Required for data persistence)
# Get from: https://dashboard.convex.dev
# For build-only testing, use a test deployment or leave empty
NEXT_PUBLIC_CONVEX_URL=

# Optional: OpenAI for AI features
OPENAI_API_KEY=

# Optional: Vercel Blob for file uploads
BLOB_READ_WRITE_TOKEN=

# Optional: Vercel KV for rate limiting
KV_REST_API_URL=
KV_REST_API_TOKEN=
